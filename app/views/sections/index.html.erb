<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<%= form_tag(search_sections_url, :method => "get", id: "search-form") do %>
  <%= text_field_tag :query, params[:query], placeholder: "Search Sections #" %>
  <%= submit_tag "Search", :semester => nil %>
<%end %>

<table>
  <thead>
    <tr>
      <th>Semester</th>
      <th>Section number</th>
      <th>Room number</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.semester %></td>
        <td><%= section.section_number %></td>
        <td><%= section.room_number %></td>
        <td><%= section.course.name %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path %>
